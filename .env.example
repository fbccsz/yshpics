# URL de conexão com o banco de dados (ex: SQLite para desenvolvimento ou PostgreSQL para produção)
DATABASE_URL=sqlite:///./banco_fotos.db

# Chave secreta para assinar cookies de sessão — mude para um valor aleatório seguro em produção
# Gere um valor seguro com: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your-secret-key-here

# E-mail do dono da plataforma — quem logar com este e-mail terá acesso ao painel master em /owner
OWNER_EMAIL=seu@email.com

# URL base pública do site (usada em links de e-mail e nas meta tags Open Graph)
BASE_URL=https://yshpics.com

# Configuração SMTP para notificações automáticas por e-mail após confirmação de pagamento PIX
# Deixe em branco para desativar as notificações por e-mail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu@email.com
SMTP_PASS=sua_senha_de_app
SMTP_FROM=seu@email.com
